---
edge_public_ipv4: "{{ _hs_infra_tf_edge_public_ipv4 }}"
edge_private_ipv4: "{{ _hs_infra_tf_edge_private_ipv4 }}"

{% raw %}
_private_cidr: >-
  {{
    (ansible_default_ipv4.network + '/' + ansible_default_ipv4.netmask) | ansible.utils.ipaddr('net')
  }}
acme_domains:
  - cn: "*.{{ public_domain }}"
    zone: "{{ public_domain }}"
acme_nsupdate_host: "{{ public_ipv4 }}"
acme_nsupdate_delegate_to: "localhost"

acme_nsupdate_key_name: "{{ hs_dns_key.name }}"
acme_nsupdate_key_algorithm: hmac-sha256
glxclans_dns_enable: true

glxclans_dns_listen_ipv4: "{{ ansible_all_ipv4_addresses | union(['127.0.0.1']) }}"
glxclans_dns_listen_ipv6: "{{ ansible_all_ipv6_addresses | union(['::1']) }}"
glxclans_dns_allow_recursion:
  - "127.0.0.1"
  - "{{ _private_cidr }}"
glxclans_dns_forwarders:
  - "9.9.9.9"

hs_dns_key:
  name: "{{ public_domain }}."
  algorithm: hmac-sha256

glxclans_dns_tsig_keys:
  - "{{ hs_dns_key }}"

glxclans_dns_views:
  - name: default
    match_clients:
      - "!127.0.0.1"
      - "!{{ _private_cidr }}"
      - "any"
  - name: internal
    match_clients:
      - "127.0.0.1"
      - "{{ _private_cidr }}"

glxclans_dns_zone_domains:
  - name: "consul"
    type: forward
    forwarders:
      - "127.0.0.1 port 8600"

  - name: "{{ public_domain }}"
    type: master
    hostmaster_email: "hostmaster.{{ public_domain }}"
    allow_update:
      - "key {{ hs_dns_key.name }}"
    name_servers:
      - ns
    mail_servers:
      - name: mx
        preference: 10
    text:
      - name: "{{ public_domain }}."
        text: "v=spf1 mx -all"
    hosts:
      - name: ""
        ip: "{{ edge_public_ipv4 }}"
        ttl: 300
      - name: "sre"
        ip: "{{ edge_public_ipv4 }}"
        ttl: 300
      - name: ns
        ip: "{{ edge_public_ipv4 }}"
        ttl: 300
        aliases:
          - vault
          - consul
          - nomad
          - grafana
      - name: mx
        ip: "{{ edge_public_ipv4 }}"
        ttl: 300
        aliases:
          - mail
{% endraw %}

